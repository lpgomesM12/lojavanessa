<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Produtos</h3>
  </div>
  <div class="panel-body">
  <table class="table table-hover">
  <thead>
    <tr>
      <th>Produto</th>
      <th>Valor Compra</th>
      <th>Valor P/Venda</th>
      <th>Categoria</th>
      <th>Cor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @produtos.each do |produto| %>
      <tr>
        <td><%= produto.nome_produto %></td>
        <td><%= produto.valr_compra %></td>
        <td><%= produto.valr_sugeridovenda %></td>
        <td><%= produto.categoriaproduto.nome %></td>
        <td><%= produto.cor.nome %></td>          
        <td align='right'>
              <div class="btn-group">
                  <%= link_to produto, class: "btn btn-default btn-sm" do %>
                    <span class="glyphicon glyphicon-list-alt"></span> Exibir
                  <% end %>             
                  <%= link_to edit_produto_path(produto), class: "btn btn-default btn-sm" do %>
                    <span class="glyphicon glyphicon-pencil"></span> Editar
                  <% end %>
                 <%= link_to produto, method: :delete, data: { confirm: 'Deseja excluir o registro?' }, class: "btn btn-default btn-sm" do %>
                    <span class="glyphicon glyphicon-trash"></span> Excluir
                  <% end %> 
              </div>
         </td> 
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
</div>

<br>

<%= link_to new_produto_path, class: "btn btn-default btn-sm" do %>
   <span class="glyphicon glyphicon-file"></span>Nova
<% end %>


