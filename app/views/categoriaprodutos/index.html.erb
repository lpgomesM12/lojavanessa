
<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Lista Categorias</h3>
  </div>
  <div class="panel-body">
  <table class="table table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categoriaprodutos.each do |categoriaproduto| %>
      <tr>
        <td><%= categoriaproduto.nome %></td>
         <td align='right'>
              <div class="btn-group">
                  <%= link_to categoriaproduto, class: "btn btn-default btn-sm" do %>
                    <span class="glyphicon glyphicon-list-alt"></span> Exibir
                  <% end %>             
                  <%= link_to edit_categoriaproduto_path(categoriaproduto), class: "btn btn-default btn-sm" do %>
                    <span class="glyphicon glyphicon-pencil"></span> Editar
                  <% end %>
                 <%= link_to categoriaproduto, method: :delete, data: { confirm: 'Deseja excluir o registro?' }, class: "btn btn-default btn-sm" do %>
                    <span class="glyphicon glyphicon-trash"></span> Excluir
                  <% end %> 
              </div>
         </td> 
      </tr>
    <% end %>
  </tbody>
 </table>
  </div>
</div>

<br>

<%= link_to new_categoriaproduto_path, :class => "btn btn-default btn-sm" do %>
   <span class="glyphicon glyphicon-file"></span>Nova
<% end %>

